# Base de datos
DB_HOST=your-cloud-database-host
DB_NAME=your-database-name
DB_PORT=3306
DB_TEST_NAME=your-test-database-name

# Usuario de aplicacion
DB_USER=your-database-user
DB_PASSWORD=your-database-password

# Configuracion de seguridad
BCRYPT_SALT_ROUNDS=10
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Configuracion del servidor
NODE_ENV=production
PORT=3000

# Configuracion de Admin
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_INITIAL_PASSWORD=change-this-password
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User
ADMIN_FORCE_PASSWORD_CHANGE=true

# Configuracion de CORS (opcional)
CORS_ORIGIN=https://your-frontend-domain.com

# Configuracion de Logging (opcional)
LOG_LEVEL=info